package ${package}.${backmodule}.service.impl;


import ${package}.${backmodule}.dao.${className}Dao;
import com.alibaba.fastjson.JSONObject;
import ${package}.${backmodule}.service.${className}Service;
import ${package}.${common}.Result;
import java.util.List;
import java.util.Objects;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import javax.annotation.Resource;

/**
 * ${comments}
 *
 * @author ${author}
 * @email ${email}
 * @date ${datetime}
 */
@Service
public class ${className}ServiceImpl implements ${className}Service {

    @Resource
    private ${className}Dao ${classname}Dao;

    @Override
    public Result update(JSONObject jsonObject) {
            ${classname}Dao.update(jsonObject);
        return Result.ok();
    }

    @Override
    public Result insert(JSONObject jsonObject) {
            ${classname}Dao.insert(jsonObject);
        return Result.ok();
    }

    @Override
    public Result page(JSONObject jsonObject) {
        if(Objects.isNull(jsonObject)){
            jsonObject = new JSONObject();
            jsonObject.put("size",20);
            jsonObject.put("currentPage",1);
        }
        List<JSONObject> list = ${classname}Dao.listByPage(jsonObject);
        return Result.okData(list);
    }

    @Override
    public Result count(JSONObject jsonObject) {
        int count = ${classname}Dao.count(jsonObject);
        return Result.okData(count);
    }

    @Override
    public Result delete(Long id) {
            ${classname}Dao.delete(id);
        return Result.ok();
    }

    @Override
    public Result get(Long id) {
        JSONObject json = ${classname}Dao.getById(id);
        return Result.okData(json);
    }
}