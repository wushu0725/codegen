<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="${package}.${tableName}.dao.${className}Dao">

	<!-- 可根据自己的需求，是否要使用 -->
    <select id="count" resultType="Integer">
        SELECT count(0)
        FROM ${tableName} obj
        WHERE 1 = 1
        #if(${delColumn} != "")
        AND WHERE obj.${delColumn} = ${unDelVal}
        #end
        <where>
            #foreach($column in $columns)
                <if test="${column.attrname} != null">
                    AND obj.${column.attrname} = #{${column.attrname}}
                </if>
                #if($foreach.hasNext),#end
            #end
        </where>
    </select>


    <select id="listByPage" resultType="com.alibaba.fastjson.JSONObject">
        SELECT
        #foreach($column in $columns)
            obj.${column.columnName} ${column.attrname}#if($foreach.hasNext),#end
        #end
        FROM ${tableName} obj
        WHERE 1 = 1
        #if(${delColumn} != "")
        AND WHERE obj.${delColumn} = ${unDelVal}
        #end
        <where>
            #foreach($column in $columns)
                <if test="${column.attrname} != null">
                    AND obj.${column.attrname} = #{${column.attrname}}
                </if>
                #if($foreach.hasNext),#end
            #end
        </where>
        ORDER BY obj.id DESC
        LIMIT #{page-1}*#{size}, #{size}
    </select>

    <select id="getById"  parameterType="java.lang.Long" resultType="com.alibaba.fastjson.JSONObject">
        select * from ${tableName} obj where obj.id = #{id}
    </select>

    <insert id="insert" parameterType="com.alibaba.fastjson.JSONObject">
        INSERT INTO ${tableName} (
        #foreach($column in $columns)#if(${column.columnName}!='id')${column.columnName}#if($foreach.hasNext),#end #end
        #end
        )
        VALUES
        (
        #foreach($column in $columns)#if(${column.columnName}!='id')
        #{${column.attrname}}#if($foreach.hasNext),#end #end
        #end
        );
    </insert>

    <update id="update" parameterType="com.alibaba.fastjson.JSONObject">
        UPDATE ${tableName}
        SET
        #foreach($column in $columns) #if(${column.columnName}!='id') ${column.columnName}=#{${column.attrname}}#if($foreach.hasNext),#end
        #end #end
        WHERE
        id = #{id};
    </update>


    <update id="delete" parameterType="java.lang.Long">
        #if(${delColumn} != "")
        update ${tableName} set ${delColumn}=${delVal} where id = #{id}
        #else
        delete from ${tableName} where id = #{id}
    #end

    </update>
</mapper>